{
  "name": "dalton-cli",
  "version": "0.1.0",
  "description": "A custom CLI for interacting with various AI APIs.",
  "bin": {
    "daltoncli": "./dist/src/index.js",
    "dalton-cli": "./dist/src/index.js"
  },
  "main": "dist/index.js",
