    "inquirer": "^12.10.0",
    "js-yaml": "^4.1.1",
    "keytar": "^7.9.0",
    "openai": "^6.5.0",
    "tiktoken": "^1.0.22",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.8.1",
    "jest": "^29.7.0",
