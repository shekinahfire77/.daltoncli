# daltoncli Environment Variables
# Copy this file to .env and fill in your actual API keys
# WARNING: Never commit .env file with real keys to version control

# ============================================================
# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
# ============================================================
OPENAI_API_KEY=sk-your-api-key-here

# ============================================================
# Google Generative AI (Gemini) Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
# ============================================================
GOOGLE_API_KEY=your-google-api-key-here

# ============================================================
# Mistral AI Configuration
# Get your API key from: https://console.mistral.ai/api-keys/
# ============================================================
MISTRAL_API_KEY=your-mistral-api-key-here

# ============================================================
# Azure OpenAI Configuration
# Get your credentials from Azure Portal
# Only needed if using Azure as a provider
# ============================================================
AZURE_OPENAI_API_KEY=your-azure-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# ============================================================
# Groq Configuration
# Get your API key from: https://console.groq.com/keys
# Only needed if using Groq as a provider
# ============================================================
GROQ_API_KEY=your-groq-api-key-here

# ============================================================
# Chat and Session Configuration
# Controls conversation history and session management
# ============================================================
# Maximum messages to keep in chat history (1-1000)
DALTON_CHAT_HISTORY_LIMIT=10

# Maximum messages before session rotation
DALTON_MAX_SESSION_SIZE=100

# Maximum history limit users can set
DALTON_MAX_HISTORY_UPPER_BOUND=1000

# Minimum history limit users can set
DALTON_MAX_HISTORY_LOWER_BOUND=1

# ============================================================
# File Operation Limits
# Control file reading and processing
# ============================================================
# Maximum bytes to read from a file
DALTON_MAX_READ_BYTES=50000

# File size warning threshold (bytes)
DALTON_FILE_WARNING_THRESHOLD=50000

# ============================================================
# Shell Execution Configuration
# Control shell command execution behavior
# ============================================================
# Shell command execution timeout (milliseconds)
DALTON_SHELL_TIMEOUT=15000

# Maximum allowed command length (characters)
DALTON_MAX_COMMAND_LENGTH=10000

# ============================================================
# API Timeout Configuration
# Fine-tune API request timeouts (milliseconds)
# ============================================================
# Default timeout for API calls
DALTON_API_TIMEOUT_DEFAULT=30000

# Minimum allowed timeout
DALTON_API_TIMEOUT_MIN=1000

# Maximum allowed timeout
DALTON_API_TIMEOUT_MAX=600000

# ============================================================
# Retry Configuration
# Control automatic retry behavior for failed API calls
# ============================================================
# Maximum number of retry attempts
DALTON_MAX_RETRIES=3

# Initial delay before first retry (milliseconds)
DALTON_RETRY_INITIAL_DELAY=1000

# Maximum delay between retries (milliseconds)
DALTON_RETRY_MAX_DELAY=10000

# Exponential backoff multiplier (must be > 1.0)
DALTON_RETRY_BACKOFF_MULTIPLIER=2

# Jitter factor for retry delays (0.0-1.0)
DALTON_RETRY_JITTER_FACTOR=0.1

# ============================================================
# Policy Engine Configuration
# Control policy enforcement and validation
# ============================================================
# Code block threshold for policy decisions
DALTON_CODE_BLOCK_THRESHOLD=10

# ============================================================
# Runtime Configuration (Optional)
# Defaults are set in config.json
# ============================================================
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=info
